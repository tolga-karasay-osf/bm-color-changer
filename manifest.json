{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0",
  "description": "A brief description of my extension",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["https://*.dx.commercecloud.salesforce.com/*"],
  "permissions": ["tabs", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": ["https://*.dx.commercecloud.salesforce.com/*"],
      "css": ["popup.css"],
      "js": ["popup.js"]
    }
  ]
}
